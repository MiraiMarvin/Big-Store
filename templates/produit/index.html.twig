{% extends 'base.html.twig' %}

{% block title %}Catalogue - Boutique Points{% endblock %}

{% block body %}
    <section class="py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <span class="text-muted">{{ produits|length }} produit{{ produits|length > 1 ? 's' : '' }}</span>
        </div>

        {% if produits is not empty %}
            <div class="row g-4">
                {% for produit in produits %}
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="fw-semibold mb-2">{{ produit.nom }}</h5>
                                    <span class="badge text-bg-light mb-2">{{ produit.category }}</span>
                                    <p class="text-muted small mb-3">
                                        {{ produit.description|slice(0, 120) ~ (produit.description|length > 120 ? '...' : '') }}
                                    </p>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mt-auto pt-3 border-top">
                                    <span class="fw-bold text-success">{{ produit.prix }} pts</span>
                                    <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-outline-dark btn-sm px-3">
                                        Détails
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-secondary mt-5 text-center">
                Aucun produit n’est disponible pour le moment.
            </div>
        {% endif %}
    </section>
{% endblock %}
