{% extends 'base.html.twig' %}

{% block title %}Créer un nouveau produit{% endblock %}

{% block body %}
<section class="py-4">
    <h1 class="mb-4 fw-bold">Nouveau produit</h1>

    <div class="row">
        <div class="col-md-6">
            {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_label(form.category, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.category) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nom) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.prix, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.prix) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.description, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-dark">Créer</button>
                    <a href="{{ path('app_admin_produit_index') }}" class="btn btn-outline-secondary">Annuler</a>
                </div>
                
            {{ form_end(form) }}
        </div>
    </div>
</section>
{% endblock %}
